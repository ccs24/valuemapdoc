    <div class="tab-pane fade" id="markets-tab" role="tabpanel" aria-labelledby="markets-tab-btn">
        <!-- Markets Tab -->
        <h4>Rynki</h4>
        {{#has_markets}} 
            {{!> mod_valuemapdoc/markets_hierarchy_compact }}
            {{> mod_valuemapdoc/markets_hierarchy}}
        {{/has_markets}}
        {{^has_markets}}
