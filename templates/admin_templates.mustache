{{!
    This file is part of Moodle - http://moodle.org/

    Template for admin templates management page.

    @template mod_valuemapdoc/admin_templates

    Context variables required for this template:
    * heading - Page heading
    * notice - Any notice message to display
    * addtemplateurl - URL for adding new template
    * addtemplatetext - Text for add template button
    * has_templates - Boolean if templates exist
    * existingtemplatestext - Text for existing templates heading
    * headers - Array of table headers
    * template_groups - Array of template groups with properties:
        - typename, template_count, templates array
        - templates contain: id, name, description, usage, can_delete
        - editurl, edittext, duplicateurl, duplicatetext, deleteurl, deletetext, cannotdeletetext
}}

<div class="admin-templates-container">
    {{#notice}}
        <div class="alert alert-info">
            {{{notice}}}
        </div>
    {{/notice}}

    <div class="mb-3">
        <a href="{{{addtemplateurl}}}" class="btn btn-primary">
            <i class="fa fa-plus" aria-hidden="true"></i>
            {{addtemplatetext}}
        </a>
    </div>

    {{#has_templates}}
        <h3>{{existingtemplatestext}}</h3>
        
        {{#template_groups}}
            <div class="template-group mb-4">
                <div class="d-flex align-items-center mb-3">
                    <h4 class="me-3 mb-0">
                        <i class="fa fa-folder-open text-primary" aria-hidden="true"></i>
                        {{typename}}
                    </h4>
                    <span class="badge bg-secondary">{{template_count}} {{#str}}templates, mod_valuemapdoc{{/str}}</span>
                </div>
                
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">{{#str}}templatename, mod_valuemapdoc{{/str}}</th>
                                <th scope="col">{{#str}}description, mod_valuemapdoc{{/str}}</th>
                                <th scope="col">{{#str}}usage, mod_valuemapdoc{{/str}}</th>
                                <th scope="col">{{#str}}actions, mod_valuemapdoc{{/str}}</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#templates}}
                                <tr>
                                    <td>
                                        <strong>{{name}}</strong>
                                    </td>
                                    <td>
                                        {{#description}}
                                            <small class="text-muted">{{description}}</small>
                                        {{/description}}
                                        {{^description}}
                                            <em class="text-muted">{{#str}}nodescription, mod_valuemapdoc{{/str}}</em>
                                        {{/description}}
                                    </td>
                                    <td>
                                        {{#usage}}
                                            <span class="badge bg-info">{{usage}}</span>
                                        {{/usage}}
                                        {{^usage}}
                                            <span class="badge bg-light text-dark">0</span>
                                        {{/usage}}
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="{{{editurl}}}" 
                                               class="btn btn-outline-secondary btn-sm"
                                               title="{{edittext}}">
                                                <i class="fa fa-edit" aria-hidden="true"></i>
                                                <span class="d-none d-md-inline">{{edittext}}</span>
                                            </a>
                                            <a href="{{{duplicateurl}}}" 
                                               class="btn btn-outline-info btn-sm"
                                               title="{{duplicatetext}}"
                                               onclick="return confirm('{{#str}}confirmduplicate, mod_valuemapdoc{{/str}}');">
                                                <i class="fa fa-clone" aria-hidden="true"></i>
                                                <span class="d-none d-lg-inline">{{duplicatetext}}</span>
                                            </a>
                                            {{#can_delete}}
                                                <a href="{{{deleteurl}}}" 
                                                   class="btn btn-outline-danger btn-sm"
                                                   title="{{deletetext}}"
                                                   onclick="return confirm('{{#str}}confirmdelete, mod_valuemapdoc{{/str}}');">
                                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                                    <span class="d-none d-md-inline">{{deletetext}}</span>
                                                </a>
                                            {{/can_delete}}
                                            {{^can_delete}}
                                                <span class="btn btn-outline-secondary btn-sm disabled" 
                                                      title="{{cannotdeletetext}}">
                                                    <i class="fa fa-lock" aria-hidden="true"></i>
                                                    <span class="d-none d-lg-inline">{{#str}}inuse, mod_valuemapdoc{{/str}}</span>
                                                </span>
                                            {{/can_delete}}
                                        </div>
                                    </td>
                                </tr>
                            {{/templates}}
                        </tbody>
                    </table>
                </div>
            </div>
        {{/template_groups}}
    {{/has_templates}}

    {{^has_templates}}
        <div class="alert alert-info text-center">
            <i class="fa fa-info-circle fa-2x mb-2"></i>
            <h4>{{#str}}notemplates, mod_valuemapdoc{{/str}}</h4>
            <p>{{#str}}notemplates_desc, mod_valuemapdoc{{/str}}</p>
        </div>
    {{/has_templates}}
</div>

{{#js}}
require(['jquery'], function($) {
    // Dodatkowy JavaScript jeśli potrzebny
    $(document).ready(function() {
        // Animacja po usunięciu szablonu
        $('a[href*="delete"]').on('click', function(e) {
            var row = $(this).closest('tr');
            if (confirm('{{#str}}confirmdelete, mod_valuemapdoc{{/str}}')) {
                row.fadeOut();
            } else {
                e.preventDefault();
            }
        });
    });
});
{{/js}}